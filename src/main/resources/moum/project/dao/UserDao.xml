<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="moum.project.dao.UserDao">

    <resultMap id="UserMap" type="moum.project.vo.User">
        <id column="user_id" property="no"/>
        <result column="nickname" property="nickname"/>
        <result column="email" property="email"/>
        <result column="password" property="password"/>
        <result column="admin" property="admin"/>
    </resultMap>

    <select id="list" resultMap="UserMap">
        select
        user_id,
        nickname,
        email,
        admin
        from
        user
        order by
        user_id asc
    </select>

    <insert id="insert" parameterType="moum.project.vo.User">
        insert into user(nickname, email, password, admin)
        values (#{nickname}, #{email}, #{password}, #{admin})
    </insert>

    <select id="findBy" resultMap="UserMap" parameterType="int">
        select
        user_id,
        nickname,
        email,
        admin
        from
        user
        where
        user_id=#{no}
    </select>

    <select id="findByEmail" resultMap="UserMap">
        select
        user_id,
        nickname,
        email,
        password,
        admin
        from
        user
        where
        email=#{email}
    </select>

    <select id="findByEmailAndPassword" resultMap="UserMap">
        select
        user_id,
        nickname,
        email,
        admin
        from
        user
        where
        email=#{email} and password=#{password}
    </select>

    <update id="update" parameterType="moum.project.vo.User">
        update user set
        nickname=#{nickname},
        email=#{email},
        password=#{password},
        admin=#{admin}
        where
        user_id=#{no}
    </update>

    <delete id="delete" parameterType="int">
        delete from user
        where user_id=#{no}
    </delete>
</mapper>
